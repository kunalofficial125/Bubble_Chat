<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black background -->
    <item>
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Blue diagonal stripes -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape>
                <gradient
                    android:type="linear"
                    android:angle="90"
                    android:startColor="#000000"
                    android:centerColor="#04111d"
                    android:endColor="#000000"
                    android:centerY="0.5" />
            </shape>
        </rotate>
    </item>

    <!-- Second set of blue diagonal stripes (offset) -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="90%">
            <shape>
                <gradient
                    android:type="linear"
                    android:angle="90"
                    android:startColor="#000000"
                    android:centerColor="#04111d"
                    android:endColor="#000000"
                    android:centerY="0.6" />
            </shape>
        </rotate>
    </item>
</layer-list>